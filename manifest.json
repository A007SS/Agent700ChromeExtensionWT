{
  "manifest_version": 3,
  "name": "Agent700 Web Tools",
  "version": "2.55",
  "description": "Agent700 your web assistant.",
  "minimum_chrome_version": "116",
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "login.html" 
  },
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "sidePanel",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; frame-src https://app.agent700.ai"
  }
}